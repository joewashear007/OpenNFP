@using MudBlazor
@inherits LayoutComponentBase
@inject NavigationManager uriHelper;
@inject IChartingRepo ChartingRepo

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        My Application

        <MudIconButton Icon="@Icons.Material.Filled.Save" Color="Color.Inherit" Edge="Edge.End" OnClick="@((e) => Save())" />
        <MudIconButton Icon="@Icons.Material.Filled.FileOpen" Color="Color.Inherit" Edge="Edge.End" OnClick="@((e) => Import())" />
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenu/>
    </MudDrawer>
    <MudMainContent>
    <MudContainer MaxWidth="MaxWidth.False">
        @Body
    </MudContainer>
</MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    async Task Import()
    {
        uriHelper.NavigateTo(uriHelper.Uri, forceLoad: true);
        await ChartingRepo.OpenAsync();
    }

    async Task Save()
    {
        await ChartingRepo.SaveAsync();
    }
}
